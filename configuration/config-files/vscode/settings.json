// Place your settings in this file to overwrite the default settings
{
  "editor.fontFamily": "Fira Code, Cascadia, Menlo, Monaco",
  "editor.fontSize": 15,
  "editor.fontWeight": "normal",
  "editor.fontLigatures": false,
  "editor.rulers": [
    80,
    100,
    120
  ],
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 140,
  "editor.cursorBlinking": "smooth",
  "editor.renderWhitespace": "all",
  "editor.renderIndentGuides": true,
  "editor.minimap.enabled": false,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.maxColumn": 50,
  "window.nativeTabs": true,
  "explorer.openEditors.visible": 0,
  "terminal.external.osxExec": "iTerm.app",
  "extensions.autoUpdate": true,
  "workbench.sideBar.location": "left",
  "workbench.colorTheme": "Monokai++",
  "sublimeTextKeymap.promptV3Features": true,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.snippetSuggestions": "top",
  "editor.formatOnPaste": true,
  
  "gitlens.advanced.messages": {
    "suppressGitDisabledWarning": true,
    "suppressShowKeyBindingsNotice": true,
    "suppressWelcomeNotice": true
  },
  "gitlens.annotations.file.gutter.format": "${message|40?} ${date|14-}",
  "gitlens.annotations.line.trailing.format": "${author} • ${message} • ${date}",
  "gitlens.annotations.line.trailing.dateFormat": "DD MMM YYYY - H:MMa",
  "gitlens.annotations.file.gutter.hover.wholeLine": true,
  "gitlens.blame.ignoreWhitespace": true,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.codeLens.enabled": false,
  "dotnet-test-explorer.enableTelemetry": false,
  "gitlens.blame.format": "${message|40?} ${date|14-}",
  "gitlens.currentLine.dateFormat": "DD MMM YYYY - H:MMa",
  "gitlens.currentLine.format": "${author} • ${message} • ${date}",
  "gitlens.hovers.annotations.over": "line",
  "gitlens.keymap": "chorded",
  "gitlens.historyExplorer.enabled": true,
  "editor.renderControlCharacters": false,
  "editor.stablePeek": true,
  "editor.smoothScrolling": true,
  "search.quickOpen.includeHistory": false,
  "workbench.fontAliasing": "auto",
  "gitlens.views.fileHistory.enabled": true,
  "gitlens.views.lineHistory.enabled": true,
  "workbench.editor.enablePreview": false,
  "explorer.confirmDelete": false,
  "window.zoomLevel": 0,
  "git.autofetch": true,
  "breadcrumbs.enabled": true
}