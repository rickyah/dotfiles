// Coloque su configuración en este archivo para sobrescribir la configuración predeterminada.
{
    "editor.fontFamily": "Fira Code,Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,
    "editor.lineHeight": 0,
    "editor.fontLigatures": false,
    "editor.renderWhitespace": "boundary",
    "editor.cursorStyle": "block-outline",
    "editor.wrappingIndent": "indent",
    "editor.rulers": [
        80,
        100
    ],
    "files.exclude": {
        "**/*.meta": true
    },
    "editor.wordWrap": "on",
    "editor.wordWrapColumn": 120,
    "editor.minimap.enabled": true,
    "editor.minimap.renderCharacters": false,
    "workbench.sideBar.location": "left",
    "workbench.colorTheme": "Monokai Dark Soda",
    "window.titleBarStyle": "native",
    "window.nativeTabs": true,
    "window.zoomLevel": 0,
    "editor.renderIndentGuides": true,
    "workbench.editor.revealIfOpen": true,
    "workbench.tips.enabled": false,
    "window.title": "${activeEditorShort}${separator}${rootName}${dirty}",
    "editor.insertSpaces": false,
    "explorer.openEditors.visible": 0,
    "workbench.editor.enablePreview": false,
    "editor.formatOnSave": false,
    "files.trimTrailingWhitespace": true,
    "editor.stablePeek": true,
    "editor.multiCursorModifier": "alt",
    "editor.renderControlCharacters": true,
    "csharp.suppressDotnetInstallWarning": true,
    "workbench.startupEditor": "newUntitledFile",
    "editor.snippetSuggestions": "top",
    "editor.formatOnPaste": true,
    "workbench.editor.labelFormat": "medium",
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#BBBF"
    },
    "code-eol.color": "#666",
    "python.pythonPath": "python3",
    "extensions.ignoreRecommendations": false,
    "workbench.editor.tabSizing": "shrink",
    "debug.toolBarLocation": "docked",
    "diffEditor.ignoreTrimWhitespace": true,
    "gitlens.codeLens.scopes": [
        "containers",
        "blocks"
    ],

    "gitlens.codeLens.enabled": false,
    "gitlens.blame.toggleMode": "window",
    "gitlens.blame.heatmap.enabled": false,
    "gitlens.statusBar.enabled": false,
    "gitlens.settings.mode": "advanced",
    "gitlens.defaultDateStyle": "absolute",
    "gitlens.menus": {
        "editor": {
            "blame": true,
            "clipboard": true,
            "compare": true,
            "details": true,
            "history": true,
            "remote": true
        },
        "editorGroup": {
            "blame": true,
            "compare": true,
            "history": true,
            "remote": true
        },
        "editorTab": {
            "compare": true,
            "history": true,
            "remote": true
        },
        "explorer": {
            "compare": true,
            "history": true,
            "remote": true
        }
    },
    "java.errors.incompleteClasspath.severity": "ignore",
    "gitlens.resultsExplorer.files.layout": "tree",
    "sync.gist": "2c51f742d871a517738872a48b5e2fe0",
    "sync.quietSync": false,
    "sync.removeExtensions": true,
    "sync.syncExtensions": true,
    "sync.autoDownload": false,
    "sync.autoUpload": false,
    "sync.forceDownload": false,
    "gitlens.advanced.telemetry.enabled": false
}